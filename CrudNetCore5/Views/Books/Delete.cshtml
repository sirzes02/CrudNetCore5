@model CrudNetCore5.Models.BookModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col">
            <h3>Delete the books</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-10">
            <form method="post" asp-action="DeleteBook">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="ReleaseDate" class="control-label"></label>
                    <input asp-for="ReleaseDate" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="Author" class="control-label"></label>
                    <input asp-for="Author" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="custom-control-label"></label>
                    <input asp-for="Price" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <input type="submit" value="Delete book" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

