@model IEnumerable<CrudNetCore5.Models.BookModel>
@{
    ViewData["Title"] = "List of books";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    
    @if (TempData["message"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["message"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="row">
        <div class="col">
            <h3>List of books</h3>
        </div>
        <div class="col">
            <a class="btn btn-success d-block" asp-action="Create" asp-controller="Books">Add new book</a>
        </div>
    </div>

    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <td>@Html.DisplayNameFor(book => book.Id)</td>
                        <td>@Html.DisplayNameFor(book => book.Title)</td>
                        <td>@Html.DisplayNameFor(book => book.Description)</td>
                        <td>@Html.DisplayNameFor(book => book.ReleaseDate)</td>
                        <td>@Html.DisplayNameFor(book => book.Author)</td>
                        <td>@Html.DisplayNameFor(book => book.Price)</td>
                        <td>Actions</td>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var book in Model)
                    {
                        <tr>
                            <td>@book.Id</td>
                            <td>@book.Title</td>
                            <td>@book.Description</td>
                            <td>@book.ReleaseDate</td>
                            <td>@book.Author</td>
                            <td>@book.Price</td>
                            <td>
                                <a asp-controller="Books" asp-action="Edit" asp-route-id="@book.Id" class="btn btn-warning">Edit</a>
                                <a asp-controller="Books" asp-action="Delete" asp-route-id="@book.Id" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No existen registros</p>
        }
    </div>
</div>
